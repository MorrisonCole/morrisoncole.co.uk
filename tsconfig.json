{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["./types"]
  },
  "include": [
    "./src/**/*",
    "./gatsby-browser.tsx",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./gatsby-ssr.tsx",
    "./plugins/**/*",
    "./content/blog/**/*"
  ],
  "exclude": ["./.cache", "./public", "./dist"]
}
