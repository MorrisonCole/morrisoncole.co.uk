{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./types"]
  },
  "include": [
    "./src/**/*",
    "./gatsby-browser.tsx",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./gatsby-ssr.tsx",
    "./plugins/**/*",
    "./content/blog/**/*"
  ],
  "exclude": ["./.cache", "./public", "./dist"]
}
